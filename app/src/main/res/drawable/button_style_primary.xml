<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/primaryAccentDark">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dp" />
            <solid android:color="@color/primaryAccentDark"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="6dp" />
            <solid android:color="@color/primaryAccentDark"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dp" />
            <solid android:color="@color/primaryAccent"/>
        </shape>
    </item>
</ripple>